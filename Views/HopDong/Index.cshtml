@model IEnumerable<BTLN1.Models.HopDong>

@{
    ViewData["Title"] = "Index";
}

<h1>DANH SÁCH HỢP ĐỒNG</h1>

<p>
    <a asp-action="Create">Tạo hợp đồng mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TimeHopDong)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TimeHopDong)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.HopDongID">Cập nhật</a> |
                <a asp-action="Details" asp-route-id="@item.HopDongID">Chi tiết</a> |
                <a asp-action="Delete" asp-route-id="@item.HopDongID">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>

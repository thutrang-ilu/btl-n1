@model BTLN1.Models.HopDong

@{
    ViewData["Title"] = "Edit";
}

<h1>Cập nhật dữ liệu</h1>

<h4>Hợp đồng</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="HopDongID" />
            <div class="form-group">
                <label asp-for="TimeHopDong" class="control-label"></label>
                <input asp-for="TimeHopDong" class="form-control" />
                <span asp-validation-for="TimeHopDong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Danh sách hợp đồng</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model IEnumerable<BTLN1.Models.CeoViTri>

@{
    ViewData["Title"] = "Index";
}

<h1>Danh sách vị trí phòng CEO</h1>

<p>
    <a asp-action="Create">Thêm mới dữ liệu</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VitriCeo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VitriCeo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ViTriCeoID">Cập nhật</a> |
                <a asp-action="Details" asp-route-id="@item.ViTriCeoID">Chi tiết</a> |
                <a asp-action="Delete" asp-route-id="@item.ViTriCeoID">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>

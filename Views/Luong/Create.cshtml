@model BTLN1.Models.Luong

@{
    ViewData["Title"] = "Create";
}

<h1>Tạo bản ghi mới</h1>

<h4>Lương</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Vị Trí</label>
                <label asp-for="LuongID" class="control-label" hidden></label>
                <input asp-for="LuongID" class="form-control" />
                <span asp-validation-for="LuongID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Mức lương</label>
                <label asp-for="SoLuong" class="control-label" hidden></label>
                <input asp-for="SoLuong" class="form-control" />
                <span asp-validation-for="SoLuong" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Danh sách mức lương</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

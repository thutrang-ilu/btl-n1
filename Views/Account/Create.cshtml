@model BTLN1.Models.Account

@{
    ViewData["Title"] = "Create";
}

<h1><center>THÊM NHÂN VIÊN MỚI</center></h1>

<h4>Phòng Kế Toán</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AccountID" class="control-label"></label>
                <input asp-for="AccountID" class="form-control" value="@ViewBag.AccountID" readonly/>
                <span asp-validation-for="AccountID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountName" class="control-label"></label>
                <input asp-for="AccountName" class="form-control" />
                <span asp-validation-for="AccountName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountPhoneNumber" class="control-label"></label>
                <input asp-for="AccountPhoneNumber" class="form-control" />
                <span asp-validation-for="AccountPhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountAddress" class="control-label"></label>
                <input asp-for="AccountAddress" class="form-control" />
                <span asp-validation-for="AccountAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountBirth" class="control-label"></label>
                <input asp-for="AccountBirth" class="form-control" type="date" id="AccountBirth" name="AccountBirth" />
                <span asp-validation-for="AccountBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountSex" class="control-label"></label>
                <select id="AccountSex" name="AccountSex" class="form-control">
                    <option value="Nam">Nam</option>
                    <option value="Nữ">Nữ</option>
                </select>
                <span asp-validation-for="AccountSex" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountBank" class="control-label"></label>
                <input asp-for="AccountBank" class="form-control" />
                <span asp-validation-for="AccountBank" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountCCCD" class="control-label"></label>
                <input asp-for="AccountCCCD" class="form-control" />
                <span asp-validation-for="AccountCCCD" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Vị Trí</label>
                <label asp-for="ViTriAccountID" class="control-label" hidden></label>
                <select asp-for="ViTriAccountID" class ="form-control" asp-items="ViewBag.ViTriAccountID"></select>
            </div>
            <div class="form-group">
                <label>Lương</label>
                <label asp-for="LuongID" class="control-label" hidden></label>
                <select asp-for="LuongID" class ="form-control" asp-items="ViewBag.LuongID"></select>
            </div>
            <div class="form-group">
                <label>Hợp Đồng</label>
                <label asp-for="HopDongID" class="control-label" hidden></label>
                <select asp-for="HopDongID" class ="form-control" asp-items="ViewBag.HopDongID"></select>
            </div>
            <div class="form-group">
                <label asp-for="AccountStart" class="control-label"></label>
                <input asp-for="AccountStart" class="form-control" type="date" />
                <span asp-validation-for="AccountStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountEnd" class="control-label"></label>
                <input asp-for="AccountEnd" class="form-control" type="date"/>
                <span asp-validation-for="AccountEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Danh sách Phòng Kế Toán</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

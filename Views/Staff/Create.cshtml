@model BTLN1.Models.Staff

@{
    ViewData["Title"] = "Create";
}

<h1>THÊM NHÂN VIÊN HÀNH CHÍNH MỚI</h1>

<h4>Phòng Hành Chính</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StaffID" class="control-label"></label>
                <input asp-for="StaffID" class="form-control" value="@ViewBag.StaffID" readonly/>
                <span asp-validation-for="StaffID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StaffName" class="control-label"></label>
                <input asp-for="StaffName" class="form-control" />
                <span asp-validation-for="StaffName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StaffPhoneNumber" class="control-label"></label>
                <input asp-for="StaffPhoneNumber" class="form-control" />
                <span asp-validation-for="StaffPhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StaffAddress" class="control-label"></label>
                <input asp-for="StaffAddress" class="form-control" />
                <span asp-validation-for="StaffAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StaffBirth" class="control-label"></label>
                <input asp-for="StaffBirth" class="form-control" type="date" id="StaffBirth" name="StaffBirth" />
                <span asp-validation-for="StaffBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StaffSex" class="control-label"></label>
                <select id="StaffSex" name="StaffSex" class="form-control">
                    <option value="Nam">Nam</option>
                    <option value="Nữ">Nữ</option>
                </select>
                <span asp-validation-for="StaffSex" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StaffBank" class="control-label"></label>
                <input asp-for="StaffBank" class="form-control" />
                <span asp-validation-for="StaffBank" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StaffCCCD" class="control-label"></label>
                <input asp-for="StaffCCCD" class="form-control" />
                <span asp-validation-for="StaffCCCD" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Vị Trí</label>
                <label asp-for="ViTriStaffID" class="control-label" hidden></label>
                <select asp-for="ViTriStaffID" class ="form-control" asp-items="ViewBag.ViTriStaffID"></select>
            </div>
            <div class="form-group">
                <label>Lương</label>
                <label asp-for="LuongID" class="control-label" hidden></label>
                <select asp-for="LuongID" class ="form-control" asp-items="ViewBag.LuongID"></select>
            </div>
            <div class="form-group">
                <label>Hợp Đồng</label>
                <label asp-for="HopDongID" class="control-label" hidden></label>
                <select asp-for="HopDongID" class ="form-control" asp-items="ViewBag.HopDongID"></select>
            </div>
            <div class="form-group">
                <label asp-for="StaffStart" class="control-label"></label>
                <input asp-for="StaffStart" class="form-control" type="date" />
                <span asp-validation-for="StaffStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StaffEnd" class="control-label"></label>
                <input asp-for="StaffEnd" class="form-control" type="date"/>
                <span asp-validation-for="StaffEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Danhh sách phòng hành chính</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

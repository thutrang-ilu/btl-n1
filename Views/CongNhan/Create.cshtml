@model BTLN1.Models.CongNhan

@{
    ViewData["Title"] = "Create";
}

<h1>THÊM CÔNG NHÂN MỚI</h1>

<h4>Công Nhân</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaCongNhan" class="control-label"></label>
                <input asp-for="MaCongNhan" class="form-control" value="@ViewBag.MaCongNhan" readonly/>
                <span asp-validation-for="MaCongNhan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhongBan" class="control-label"></label>
                <input asp-for="PhongBan" class="form-control" />
                <span asp-validation-for="PhongBan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ViTri" class="control-label"></label>
                <input asp-for="ViTri" class="form-control" />
                <span asp-validation-for="ViTri" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Luong" class="control-label"></label>
                <input asp-for="Luong" class="form-control" />
                <span asp-validation-for="Luong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrangThai" class="control-label"></label>
                <input asp-for="TrangThai" class="form-control" />
                <span asp-validation-for="TrangThai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Danh sách công nhân</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
